<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:id="@+id/flowContainer"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text "

            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flowHelper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:flow_horizontalBias="0"
            app:flow_horizontalGap="10dp"
            app:flow_horizontalStyle="packed"
            app:flow_verticalBias="0"
            app:flow_verticalGap="8dp"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_notifications" />

        <TextView
            android:id="@+id/textV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text SOme text "
            android:textAlignment="center"
            android:textSize="20sp"
app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flowHelper" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>